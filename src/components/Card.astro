---
interface Props {
  title?: string;
  subtitle?: string;
  imgSrc?: string;
  children?: any;
}

const { title, subtitle, imgSrc, children } = Astro.props;
---

<div class="border-2 border-gray-500 rounded-4xl p-4 w-3/5 mx-auto my-2 bg-gray-700 
            shadow-[0_2px_5px_rgba(0,0,0,0.3)]">
  {title && <p class="text-yellow-400 font-bold mb-3 text-lg">{title}</p>}
  {subtitle && <p class="text-yellow-300 text-sm mb-2">{subtitle}</p>}
  {imgSrc && <img src={imgSrc} alt={title} class="w-20 h-28 object-cover rounded-md mb-2" />}
    <slot />
</div>
