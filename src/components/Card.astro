---
interface Props {
  title?: string;
  subtitle?: string;
  imgSrc?: string;
  children?: any;
}

const { title, subtitle, imgSrc, children } = Astro.props;
---
<div class="border-2 border-gray-700 rounded-3xl p-4 w-11/12 sm:w-5/6 md:w-4/5 lg:w-3/5 mx-auto my-2  
            shadow-[0_2px_5px_rgba(0,0,0,0.3)] text-[clamp(0.75rem,2vw,1rem)]">
  {title && <p class="text-yellow-400 font-bold mb-3 text-lg text-[clamp(0.9rem,2.5vw,1.25rem)]">{title}</p>}
  {subtitle && <p class="text-yellow-300 text-sm mb-2 text-[clamp(0.8rem,2vw,1rem)]">{subtitle}</p>}
  {imgSrc && <img src={imgSrc} alt={title} class="w-20 h-28 object-cover rounded-md mb-2" />}
    <slot />
</div>
