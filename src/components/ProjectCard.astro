---
import type { Project } from "../types/Project.ts";

interface Props {
  project: Project;
}

const { project } = Astro.props as Props;
---
<article class="bg-[#2b2b2b] p-4 rounded-xl shadow-md hover:shadow-lg transition-shadow w-[300px]">
  <h3 class="text-lg font-semibold text-white mb-1">{project.name}</h3>
  <p class="text-gray-400 text-sm mb-2">{project.description}</p>
  <div class="flex justify-between text-sm text-gray-500">
    <span>{project.language}</span>
    <span>‚≠ê {project.stars}</span>
  </div>
  <a
    href={project.html_url}
    class="text-blue-400 hover:underline text-sm mt-2 inline-block"
    target="_blank"
  >View</a>
</article>
